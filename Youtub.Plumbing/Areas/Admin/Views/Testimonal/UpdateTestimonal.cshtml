@model TestimonalUpdateVM
@{
    ViewData["Title"] = "UpdateTestimonal";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div>
    <h5 class="card-title">Update Testimonal</h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Testimonal" asp-action="GetTestimonalList">Testimonals</a></li>
            <li class="breadcrumb-item active">Update</li>
        </ol>
    </nav>
</div>

<!-- Card with an image on top -->

<div class="row">


    <div class="col-lg-4 card">
        <img src="~/images/@Model.FileName" class="card-img-top" alt="Testimonial">

    </div>

    <div class="col-lg-8 card">
        <div class="card-body">
            <!-- Floating Labels Form -->
            <form asp-area="Admin" asp-controller="Testimonal" asp-action="UpdateTestimonal" method="post" class="row g-3" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="RowVersion" />
                <input type="hidden" asp-for="FileName" />
                <input type="hidden" asp-for="FileType" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Name">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                        <label asp-for="FullName">Name</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <label asp-for="Title">Title</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <textarea asp-for="Comment" type="text" class="form-control" style="height:150px" placeholder="Comment"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                        <label asp-for="Comment">Comment</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form><!-- End floating Labels Form -->



        </div>
    </div>

</div>
