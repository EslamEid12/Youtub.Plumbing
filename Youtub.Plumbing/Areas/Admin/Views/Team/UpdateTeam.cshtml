@model TeamUpdateVM
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Update Team Member</h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Team" asp-action="GetTeamList">Our Team</a></li>
            <li class="breadcrumb-item active">Update</li>
        </ol>
    </nav>
</div>


<div class="row">
    <!-- Card with an image on top -->
    <div class="col-lg-4 card">
        <img src="~/images/@Model.FileName" class="card-img-top" alt="Team Member">

    </div>



    <div class="col-lg-8 card">
        <div class="card-body">
            <!-- Floating Labels Form -->
            <form asp-area="Admin" asp-controller="Team" asp-action="UpdateTeam" method="post" class="row g-3" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="RowVersion" />
                <input type="hidden" asp-for="FileName" />
                <input type="hidden" asp-for="FileType" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Name">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                        <label asp-for="FullName">Name</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <label asp-for="Title">Title</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <input asp-for="Twitter" type="text" class="form-control" placeholder="Twitter">
                        <span asp-validation-for="Twitter" class="text-danger"></span>
                        <label asp-for="Twitter">Twitter</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <input asp-for="FaceBook" type="text" class="form-control" placeholder="FaceBook">
                        <span asp-validation-for="FaceBook" class="text-danger"></span>
                        <label asp-for="FaceBook">FaceBook</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <input asp-for="Instagram" type="text" class="form-control" placeholder="Instagram">
                        <span asp-validation-for="Instagram" class="text-danger"></span>
                        <label asp-for="Instagram">Instagram</label>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-floating">
                        <input asp-for="LinkedIn" type="text" class="form-control" placeholder="LinkedIn">
                        <span asp-validation-for="LinkedIn" class="text-danger"></span>
                        <label asp-for="LinkedIn">LinkedIn</label>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form><!-- End floating Labels Form -->



        </div>
    </div>
</div>
