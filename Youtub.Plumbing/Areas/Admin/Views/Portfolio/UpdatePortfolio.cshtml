@model PortfolioUpdateVM
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<div>
    <h5 class="card-title">Update Portfolio</h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Portfolio" asp-action="GetPortfolioList">Portfolio</a></li>
            <li class="breadcrumb-item active">Update</li>
        </ol>
    </nav>
</div>


<!-- Card with an image on top -->
<div class="card">
    <img src="~/images/@Model.FileName" class="card-img-top" alt="Plumbing Porftfolio">

</div><!-- End Card with an image on top -->




<div class="card">
    <div class="card-body">
        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Portfolio" asp-action="UpdatePortfolio" method="post" class="row g-3" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            <input type="hidden" asp-for="FileName" />
            <input type="hidden" asp-for="FileType" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Header">
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <label asp-for="Title">Header</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <select asp-for="CategoryId" asp-items="@(new SelectList(Model.CategoryList,"Id","Name"))" class="form-control" placeholder="Category Name"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                    <label asp-for="CategoryId">Call</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->



    </div>
</div>



